{% extends 'layout.twig' %}
{% block title %}Home{% endblock %}

{% block content %}
    <h1><img src="./img/header.jpg"></h1>
    <section>
        {% for articleKey, article in articles %}
            <article>
                <h2><a class="article" href="{{ app.url_generator.generate('article', {idArticle: articleKey}) }}">{{ article.title }}</a></h2>
                <ul>
                    {% for idTag, tag in article.tags %}
                        {% if tag %}
                        <li>
                            <a href="{{ app.url_generator.generate('filterArticle', { idTag: idTag }) }}">
                                {{tag}}
                            </a>
                        </li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <p>
                    {{ article.body }}
                </p>
            </article>
        {% endfor %}
    </section>
{% endblock %}
